# Base image
Bootstrap: docker
From: pytorch/pytorch:2.7.0-cuda11.8-cudnn9-runtime

%post
	# Update image contents to have latest python3 and pip3 for image
	apt-get update
	apt-get install -y vim curl
	
	# Install OmniAnomaly requirements 
    cd /app
	pip3 install .
	pip3 install --upgrade pip

%files
